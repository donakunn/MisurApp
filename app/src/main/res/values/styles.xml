<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/sfondo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>i
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="importantbuttonstyle">
        <item name="android:textColor">@color/bianco</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonstyle">
        <item name="android:textColor">@color/nero</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/row_shape</item>
    </style>

    <style name="textstyle">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/nero</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="imagestyle">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/row_shape</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="imagebuttonstyle">
        <item name="android:background">@drawable/imagebutton_shape</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="buttondeletestyle">
        <item name="android:background">@color/bianco</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>